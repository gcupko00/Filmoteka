<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <ImageView android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/individual_actor_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAllCaps="true"
            android:textSize="15dp" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="23dp"
            android:id="@+id/individual_actor_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textAllCaps="true"
            android:textSize="15dp" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="23dp"
            android:id="@+id/individual_actor_gender"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:textAllCaps="true"
            android:textSize="15dp" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="23dp"
            android:id="@+id/individual_actor_birthday"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deathday"
            android:textAllCaps="true"
            android:textSize="15dp" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="23dp"
            android:id="@+id/individual_actor_deathday"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biography"
            android:textAllCaps="true"
            android:textSize="15dp" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="23dp"
            android:id="@+id/individual_actor_biography"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">


            <Button
                android:id="@+id/addActorToFavouritesBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="#d67601"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="Add To Faves" />

            <Button
                android:id="@+id/removeActorFromFavouritesBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#d67601"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="Remove" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>